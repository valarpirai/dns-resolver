# DNS Server Configuration via Environment Variables
# Copy this file to .env and modify as needed

# Server port (default: 53)
DNS_SERVER_PORT=53

# Server bind address (default: 0.0.0.0)
DNS_SERVER_BIND_ADDRESS=0.0.0.0

# Buffer size for DNS packets in bytes (default: 512)
DNS_SERVER_BUFFER_SIZE=512

# Selector timeout in milliseconds (default: 1000)
DNS_SERVER_SELECTOR_TIMEOUT=1000

# Enable debug logging (default: false)
DNS_SERVER_DEBUG=false

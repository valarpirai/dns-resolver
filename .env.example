# DNS Server Configuration via Environment Variables
# Copy this file to .env and modify as needed

# Server port (default: 53)
DNS_SERVER_PORT=53

# Server bind address (default: 0.0.0.0)
DNS_SERVER_BIND_ADDRESS=0.0.0.0

# Buffer size for DNS packets in bytes (default: 512)
DNS_SERVER_BUFFER_SIZE=512

# Selector timeout in milliseconds (default: 1000)
DNS_SERVER_SELECTOR_TIMEOUT=1000

# Enable debug logging (default: false)
DNS_SERVER_DEBUG=true

# Root DNS servers (comma-separated, default: 13 root servers)
# DNS_RESOLVER_ROOT_SERVERS=198.41.0.4,199.9.14.201,192.33.4.12,...

# Query timeout in milliseconds (default: 5000)
DNS_RESOLVER_TIMEOUT=5000

# Maximum recursion depth (default: 16)
DNS_RESOLVER_MAX_DEPTH=16
